

<turbo-stream target='people'>
  <template>
    <div class="card  bg-base-100 shadow-xl">
      <figure><img src="http://lorempixel.com.br/1500/1500" alt="Movie"/></figure>
      <div class="card-body">
        <h2 class="card-title"><%= people.full_name %></h2>

        <p class="text-sm">
          <b>Data de Nascimento:</b> <%= people.date_of_birth.strftime('%d/%m/%Y') %></br>
          <b>Email:</b> <span><%= people.email %></span></br>
          <b>CNS:</b> <span><%= people.cns %></span></br>
        </p>

        <div class="card-actions justify-end">
          <button class="btn btn-accent">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15"/>
            </svg>
            Detalhes
          </button>
        </div>
      </div>
    </div>
  </template>

</turbo-stream>
<section class="text-gray-600 body-font">
  <div class="container py-10 px-2 mx-auto">


    <%= render 'form', citizens: @citizen %>


  </div>



</section>
