<diV  class="form-control w-full max-w-xs py-16">

  <%= form_with model: citizen,
                locals: true,
                id: 'add_citizen',
                html: { data: { controller: 'mask' } } do |f| %>


    <div class="py-2">
      <%= f.label :full_name, 'Nome completo:' %>
      <%= f.text_field :full_name,
                       placeholder: 'Nome completo',
                       required: true,
                       class: 'input input-bordered w-full max-w-xs' %>
    </div>

    <div class="py-2">
      <%= f.label :email, 'E-mail:' %>
      <%= f.text_field :email, placeholder: 'Digite seu e-mail',
                       required: true,
                       class: 'input input-bordered w-full max-w-xs' %>
    </div>

    <div class="py-2">
      <%= f.label :cpf, 'CPF:' %>
      <%= f.text_field :cpf,
                       required: true,
                       placeholder: 'Digite seu CPF',
                       class: 'input input-bordered w-full max-w-xs' %>
    </div>

    <div class="py-2">
      <%= f.label :cns, 'Número do CNS:' %>
      <%= f.text_field :cns,
                       placeholder: 'Número do CNS',
                       required: true,
                       class: 'input input-bordered w-full max-w-xs' %>
    </div>

    <div class="py-2">
      <%= f.label :date_of_birth, 'Data de nascimento:' %>
      <%= f.text_field :date_of_birth,
                       placeholder: 'Ex.: dia/mês/ano',
                       class: 'input input-bordered w-full max-w-xs' %>
    </div>

    <div class="py-2">
      <%= f.label :phone, 'Telefone com DDD:' %>
      <%= f.text_field :phone,
                       placeholder: '(00) 00000 00000',
                       required: true,
                       class: 'input input-bordered w-full max-w-xs' %>
    </div>

    <div class="py-2">
      <%= f.select(:status, [['ATIVO', 1], ['INATIVO', 2],], {},
                   { class: "select select-info w-full max-w-xs" }) %>
    </div>
    <div class="py-2">
      <%= f.file_field :picture %>
    </div>
    <div class="py-2">
      <%= f.submit 'Cadastrar', class: 'btn btn-primary' %>
    </div>

  <% end %>

