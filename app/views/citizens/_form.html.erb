<%= form_with model: @citizen,
              local: true,
              id: 'add_citizen',
              html: { data: { controller: 'mask' } } do |f| %>

  <% if @error_message.present? %>
    <div class="alert alert-danger"><%= @error_message %></div>
  <% end %>


  <div class="flex flex-row">
    <div class="flex-1 basic-1/4">
      <h1 class="text-3xl">Cadastro de munícipe </h1>


      <div class="flex  form-control w-full max-w-xs  w-full">

        <div class="py-2">
          <%= f.label :full_name, 'Nome completo:' %>
          <%= f.text_field :full_name,
                           placeholder: 'Nome completo',
                           class: 'input input-bordered w-full max-w-xs' %>
        </div>

        <div class="py-2">
          <%= f.label :email, 'E-mail:' %>
          <%= f.text_field :email, placeholder: 'Digite seu e-mail',

                           class: 'input input-bordered w-full max-w-xs' %>
        </div>

        <div class="py-2">
          <%= f.label :cpf, 'CPF:' %>
          <%= f.text_field :cpf,
                           placeholder: 'Digite seu CPF',
                           required: true,
                           class: 'input input-bordered w-full max-w-xs' %>
        </div>

        <div class="py-2">
          <%= f.label :cns, 'Número do CNS:' %>
          <%= f.text_field :cns,
                           placeholder: 'Número do CNS',
                           required: true,
                           maxlength: "15",
                           class: 'input input-bordered w-full max-w-xs' %>
        </div>

        <div class="py-2">
          <%= f.label :date_of_birth, 'Data de nascimento:' %>
          <%= f.text_field :date_of_birth,
                           required: true,
                           placeholder: 'Ex.: dia/mês/ano',
                           class: 'input input-bordered w-full max-w-xs' %>
        </div>

        <div class="py-2">
          <%= f.label :phone, 'Telefone com DDD:' %>
          <%= f.text_field :phone,
                           placeholder: '(00) 00000 00000',

                           class: 'input input-bordered w-full max-w-xs' %>
        </div>

        <div class="py-2">
          <%= f.label :status, 'Status:' %>
          <%= f.select(:status, [['ATIVO', 1], ['INATIVO', 2],], {},
                       { class: "select select-info w-full max-w-xs" }) %>
        </div>

        <div class="py-2">
          <%= f.label :picture, 'Foto:' %>
          <%= f.file_field :picture,
                           class: 'file-input file-input-bordered file-input-primary w-full max-w-xs' %>
        </div>

        <div class="py-6">
          <hr>
        </div>

        <%= f.fields_for :address do |f| %>
          <h1 class="text-3xl">Endereço </h1>


          <div class="py-2">
            <%= f.label :zipcode, 'CEP:' %>
            <%= f.text_field :zipcode,
                             required: true,
                             placeholder: 'CEP',

                             class: 'input input-bordered w-full max-w-xs' %>
          </div>

          <div class="py-2">
            <%= f.label :street, 'Endereço:' %>
            <%= f.text_field :street,
                             placeholder: 'Endereço',
                             required: true,
                             class: 'input input-bordered w-full max-w-xs' %>
          </div>

          <div class="py-2">
            <%= f.label :city, 'Cidade:' %>
            <%= f.text_field :city,
                             placeholder: 'Cidade',
                             required: true,
                             class: 'input input-bordered w-full max-w-xs' %>
          </div>

          <div class="py-2">
            <%= f.label :state, 'UF:' %>
            <%= f.text_field :state,
                             placeholder: 'UF',
                             required: true,
                             class: 'input input-bordered w-full max-w-xs' %>
          </div>

          <div class="py-2">
            <%= f.label :district, 'Bairro:' %>
            <%= f.text_field :district,
                             placeholder: 'Bairro',
                             required: true,
                             class: 'input input-bordered w-full max-w-xs' %>
          </div>

          <div class="py-2">
            <%= f.label :complement, 'Complemento:' %>
            <%= f.text_field :complement,
                             placeholder: 'Complemento',
                             required: true,
                             class: 'input input-bordered w-full max-w-xs' %>
          </div>


          <div class="py-2">
            <%= f.label :ibge_code, 'código IBGE:' %>
            <%= f.text_field :ibge_code,
                             placeholder: 'código do IBGE',

                             class: 'input input-bordered w-full max-w-xs' %>
          </div>

        <% end %>

        <div class="py-2">
          <%= f.submit 'Cadastrar', class: 'btn btn-primary' %>
        </div>

<% end %>

</div>
</div>
